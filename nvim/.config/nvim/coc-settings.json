{
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "go",
    "javascript",
    "typescript",
    "typescriptreact",
    "typescript.tsx",
    "python",
    "markdown",
    "rust",
    "haskell",
    "yaml"
  ],

  "eslint.filetypes": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "typescript.tsx"
  ],

  "languageserver": {
    "haskell": {
      "command": "~/.local/bin/hie",
      "args": ["--lsp"],
      "rootPatterns": ["stack.yaml", "cabal.project", "package.yaml"],
      "filetypes": ["hs", "lhs", "haskell"],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true
        }
      }
    }
  }
}
