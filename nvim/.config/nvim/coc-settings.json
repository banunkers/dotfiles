{
	"coc.preferences.formatOnSaveFiletypes": [
    "json",
    "go",
    "javascript",
    "typescript",
    "python",
    "markdown",
    "rust",
    "haskell",
    "yaml"
  ],
	"languageserver": {
		"haskell": {
  	  "command": "~/.local/bin/hie",
			"args": ["--lsp"],
  	  "rootPatterns": [
  	    "stack.yaml",
  	    "cabal.project",
  	    "package.yaml"
  	  ],
  	  "filetypes": [
  	    "hs",
  	    "lhs",
  	    "haskell"
  	  ],
  	  "initializationOptions": {
  	    "languageServerHaskell": {
  	      "hlintOn": true
        }
  	  }
  	}
	}
}
